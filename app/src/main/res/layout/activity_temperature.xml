<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    tools:context="com.klg.qwerty.home.TemperatureActivity">

    <ImageButton
        android:id="@+id/btnChildRoom"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_child_room"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btnRoom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_room"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btnGirldRoom"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_girld_room"
        android:layout_width="100dp"
        android:layout_height="100dp" />

</LinearLayout>
